{
  "Ollama": {
    "Endpoint": "http://localhost:11434/",
    "Model": "nomic-embed-text:v1.5"
  },
  "Cosmos": {
    "Database": "actualgames",
    "GamesContainer": "games",
    "ReviewsContainer": "reviews",
    "Vector": {
      "Path": "/vector",
      "Dimensions": 768,
      "DistanceFunction": "cosine",
      "DistanceForm": "auto",
      "IndexType": "diskANN"
    },
    "GamesVector": {
      "Path": "/gvector"
    },
    "PatchVector": {
      "Path": "/pvector"
    }
  },
  "Seeding": {
    "MaxReviewsPerGame": 200,
    "FailOnNoReviews": true,
    "MinReviewCount": 10,
    "MinQualifiedReviews": 5,
    "MinUniqueWordsPerReview": 20,
    "RequireSteamPurchase": true
  },
  "Embeddings": {
    "AllowDeterministicFallback": false,
    "NumCtx": 2048,
    "MaxBatch": 64,
    "HttpTimeoutSeconds": 180
  }
}
