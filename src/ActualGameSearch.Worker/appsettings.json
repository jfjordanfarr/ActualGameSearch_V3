{
  "Ollama": {
    "Endpoint": "http://localhost:11434/",
    "Model": "nomic-embed-8k:latest"
  },
  "Cosmos": {
    "Database": "actualgames",
    "GamesContainer": "games",
    "ReviewsContainer": "reviews",
    "Vector": {
      "Path": "/vector",
      "Dimensions": 768,
      "DistanceFunction": "cosine",
      "DistanceForm": "auto",
      "IndexType": "diskANN"
    },
    "GamesVector": {
      "Path": "/gvector"
    },
    "PatchVector": {
      "Path": "/pvector"
    }
  },
  "DataLake": {
    "Root": "AI-Agent-Workspace/Artifacts/DataLake"
  },
  "Ingestion": {
    "MaxConcurrency": 4,
    "Concurrency": 1,
    "ReviewCapBronze": 10,
    "EnableReviewDeltaPolicy": true
  },
  "Cadence": {
    "StorePagesDays": 7,
    "NewsDays": 7
  },
  "Seeding": {
    "MaxReviewsPerGame": 50,
    "FailOnNoReviews": false,
    "MinReviewCount": 5,
    "MinQualifiedReviews": 3,
    "MinUniqueWordsPerReview": 10,
    "RequireSteamPurchase": false
  },
  "Embeddings": {
    "AllowDeterministicFallback": true,
    "NumCtx": 8192,
    "MaxBatch": 1,
    "HttpTimeoutSeconds": 300
  }
}
